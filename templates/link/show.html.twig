{% extends 'base.html.twig' %}

{% block title %}{{ site_name }} : lien web{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Lien web</h2>

                <ol>
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li>Lien web</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row d-flex justify-content-center mb-5">
                <div class="col">
                    <h2>Lien web</h2>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ link.id }}</td>
                            </tr>
                            <tr>
                                <th>Titre</th>
                                <td>{{ link.title }}</td>
                            </tr>
                            <tr>
                                <th>Url</th>
                                <td>{{ link.url }}</td>
                            </tr>
                            <tr>
                                <th>Présentation</th>
                                <td>{{ link.presentation }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('link_index') }}">Retour à la liste des liens web</a>

                    <a href="{{ path('link_edit', {'id': link.id}) }}">modifier</a>

                    {{ include('link/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}