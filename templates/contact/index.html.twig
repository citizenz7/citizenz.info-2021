{% extends 'base.html.twig' %}

{% block title %}{{ site_name }} : me contacter{% endblock %}

{% block body %}

<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Me contacter</h2>

                <ol>
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li>Me contacter</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row d-flex justify-content-center mb-5">
                <div class="col">
                    {% for msg in app.session.flashBag.get('successContact') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ msg }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {% endfor %}


                    <div class="card px-3 pt-3 pb-2 mb-4">
                        <p class="lead px-3">
                            <img src="{{ asset('img/contact.png') }}" alt="Contact" class="img-fluid float-start me-5">
                            <span class="fs-1 fw-bold">Me contacter</span>
                            <br>
                            Chers lecteurs,
                            <br>
                            Merci d'utiliser le formulaire ci-dessous pour me contacter. 
                            Je vous répondrai dès que possible.
                            <span class="small fst-italic d-flex justify-content-end mt-5">{{ site_author }}</span>
                        </p>
                    </div>

                    {{ form_start(our_form) }}
                        <div class="row">
                            <div class="col">
                                Pseudo :<br>
                                {{ form_row(our_form.name, {'label': false}) }}
                            </div>
                            <div class="col">
                                E-mail :<br>
                                {{ form_row(our_form.email, {'label': false}) }}
                            </div>
                        </div>
                        Votre message :<br>
                        {{ form_row(our_form.message, {'label': false}) }}
                        Merci de recopier le code antispam : 
                        {{ form_row(our_form.captcha, {'label': false}) }}
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Envoyer le message</button>
                            <button type="reset" class="btn btn-secondary">Annuler</button>
                        </div>
                    {{ form_end(our_form) }}

                </div>
                {% block sidebar %}
                    {{ sidebar() }}
                {% endblock %}
            </div>
        </div>
    </section>
</main>

{% endblock %}