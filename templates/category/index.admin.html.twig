{% extends 'base.html.twig' %}

{% block title %}{{ site_name }} : Liste des catégories{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Catégorie</h2>

                <ol>
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li><a href="{{ path('admin') }}">Admin</a></li>
                    <li>Liste des catégories</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row py-5">

                {% for message in app.flashes('edited') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('deleted') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                <div class="col mb-4">
                    <h1>Liste des catégories</h1>

                    <table class="table mb-5">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th>Slug</th>
                                <th width="11%"></th>
                                <th width="4%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.title }}</td>
                                <td>{{ category.slug }}</td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="{{ path('category_show', {'slug': category.slug}) }}">voir</a>
                                    <a class="btn btn-sm btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">modifier</a>
                                </td>
                                <td>
                                    {{ include('category/_delete_form.html.twig') }}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="4">Il n'y a aucun enregistrement.</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <a class="btn btn-success" href="{{ path('category_new') }}">Créer une nouvelle catégorie</a>

                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}