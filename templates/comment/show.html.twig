{% extends 'base.html.twig' %}

{% block title %}{{ site_name }} : commentaire{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Commentaire</h2>

                <ol>
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li><a href="{{ path('admin') }}">Admin</a></li>
                    <li>Commentaire</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row d-flex justify-content-center mb-5">
                <div class="col">
                    <h1>Commentaire</h1>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ comment.id }}</td>
                            </tr>
                            <tr>
                                <th>Message</th>
                                <td>{{ comment.content }}</td>
                            </tr>
                            <tr>
                                <th>Actif</th>
                                <td>{{ comment.isActive ? 'Oui' : 'Non' }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ comment.email }}</td>
                            </tr>
                            <tr>
                                <th>Pseudo</th>
                                <td>{{ comment.nickname }}</td>
                            </tr>
                            <tr>
                                <th>Posté le</th>
                                <td>{{ comment.createdAt ? comment.createdAt|format_datetime('medium', 'short') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Rgpd</th>
                                <td>{{ comment.rgpd ? 'Oui' : 'Non' }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row mt-5">
                        <div class="col">
                            <a class="btn btn-sm btn-success" href="{{ path('comment_edit', {'id': comment.id}) }}">modifier</a>
                            <a class="btn btn-sm btn-primary" href="{{ path('comment_index') }}">Retour à la liste des commentaires</a>
                        </div>
                        <div class="col d-flex justify-content-end">
                            {{ include('comment/_delete_form.html.twig') }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}