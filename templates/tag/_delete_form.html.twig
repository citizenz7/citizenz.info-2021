<form method="post" action="{{ path('tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('Etes-vous certain de vouloir supprimer ce tag ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button class="btn btn-sm btn-danger">Supprimer</button>
</form>
